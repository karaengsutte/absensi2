<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ahmar.id.attendancefipunm" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>eAttendance FIP UNM</name>
    <description>
        Presensi Kehadiran FIP UNM
    </description>
    <author email="ansari@ahmar.id" href="http://www.ahmar.id">
        Ansari Saleh Ahmar
    </author>
    <content src="index.html" />
    <access origin="*" />
	<access origin="https://absen.fip.unm.ac.id/*" />
	<access origin="http://absen.fip.unm.ac.id/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="mdpi" src="./res/icon/android/mipmap-xxxhdpi/eabsensimipa_launcher.png" />
        <icon density="hdpi" src="./res/icon/android/mipmap-xxxhdpi/eabsensimipa_launcher.png" />
        <icon density="xhdpi" src="./res/icon/android/mipmap-xxxhdpi/eabsensimipa_launcher.png" />
        <icon density="xxhdpi" src="./res/icon/android/mipmap-xxxhdpi/eabsensimipa_launcher.png" />
        <icon density="xxxhdpi" src="./res/icon/android/mipmap-xxxhdpi/eabsensimipa_launcher.png" />
        
	   <preference name="android-minSdkVersion" value="14" />
	   <preference name="android-targetSdkVersion" value="29" /> 
	   <preference name="phonegap-version" value="cli-9.0.0" />
    </platform>

    <platform name="ios">
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="./res/icon/ios/180.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="./res/icon/ios/60.png" width="60" height="60" />
        <icon src="./res/icon/ios/120.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="./res/icon/ios/76.png" width="76" height="76" />
        <icon src="./res/icon/ios/152.png" width="152" height="152" />
        <!-- Spotlight Icon -->
        <icon src="./res/icon/ios/40.png" width="40" height="40" />
        <icon src="./res/icon/ios/80.png" width="80" height="80" />
